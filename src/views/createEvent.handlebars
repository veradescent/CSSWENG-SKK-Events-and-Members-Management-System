<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Event</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f8f8;
      font-family: Arial, sans-serif;
    }

    .back-link {
      display: inline-block;
      margin: 20px 0 0 40px;
      font-weight: bold;
      text-decoration: underline;
      color: #000;
    }

    /* Main container box */
    .container-box {
      background-color: #e8e8e8;
      border-radius: 10px;
      padding: 35px 50px;
      width: 750px; /* widened */
      margin: 50px auto;
      box-shadow: 0 3px 7px rgba(0, 0, 0, 0.15);
    }

    h1 {
      text-align: center;
      font-weight: bold;
      margin-bottom: 30px;
    }

    label {
      font-weight: bold;
      font-size: 0.9rem;
    }

    .image-box {
      width: 100%;
      height: 230px;
      background-color: white;
      border: 2px dashed #aaa;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #888;
      font-size: 0.9rem;
      margin-bottom: 10px;
      text-align: center;
    }

    .btn-edit {
      background-color: #f7c20a;
      color: black;
      font-weight: bold;
      border: none;
      border-radius: 5px;
      padding: 6px 20px;
      font-size: 0.9rem;
    }

    .bottom-buttons {
      text-align: right;
      margin-top: 25px;
    }

    .bottom-buttons .btn {
      width: 85px;
    }

    /* Adjust form control spacing */
    .form-control, .form-select {
      font-size: 0.95rem;
      padding: 6px 10px;
    }
  </style>
</head>
<body>

  <a href="#" class="back-link">&lt; Back</a>

  <div class="container-box">
    <h1>Create Event</h1>

    <div class="mb-3">
      <label>Title Name</label>
      <input type="text" class="form-control" placeholder="Enter title">
    </div>

    <div class="mb-3">
      <label>Description</label>
      <input type="text" class="form-control" placeholder="Input text here">
    </div>

    <div class="mb-3 text-center">
      <div id="imagePreview" class="image-box">
        Sample Announcement Image<br>and Captions
      </div>
      <input type="file" id="eventImage" accept="image/*" class="form-control d-none">
      <button id="editImageBtn" class="btn btn-edit">Edit image</button>
    </div>

    <div class="mt-4">
      <label class="fw-bold d-block">Event details:</label>

      <div class="row g-3 align-items-center">
        <div class="col-md-6">
          <label class="form-label">No. of Attendees:</label>
          <input type="number" class="form-control" placeholder="Enter number">
        </div>
        <div class="col-md-6">
          <label class="form-label">Type:</label>
          <select class="form-select">
            <option>Select type</option>
            <option>Meeting</option>
            <option>Workshop</option>
            <option>Social</option>
          </select>
        </div>
      </div>

      <div class="row g-3 mt-2">
        <div class="col-md-6">
          <label class="form-label">Date:</label>
          <input type="date" class="form-control">
        </div>
        <div class="col-md-6">
          <label class="form-label">Time:</label>
          <input type="time" class="form-control">
        </div>
      </div>
    </div>

    <div class="mt-4">
      <label class="fw-bold d-block">Send invitation:</label>

      <div class="d-flex align-items-center flex-wrap gap-3">
        <div>
          <input type="checkbox" id="sendAll">
          <label for="sendAll">Send to all members</label>
        </div>

        <div>
          <input type="checkbox" id="custom">
          <label for="custom">Custom:</label>
        </div>

        <div>
          <input type="checkbox" id="select">
          <label for="select">Select:</label>
          <select class="form-select d-inline-block" style="width: 140px;">
            <option>Select member</option>
          </select>
        </div>
      </div>
    </div>

    <div class="bottom-buttons">
      <button class="btn btn-secondary">Cancel</button>
      <button class="btn btn-danger">Delete</button>
      <button class="btn btn-success">Save</button>
    </div>
  </div>

  <script>
    document.getElementById("editImageBtn").addEventListener("click", () => {
      document.getElementById("eventImage").click();
    });

    document.getElementById("eventImage").addEventListener("change", (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (event) => {
          const preview = document.getElementById("imagePreview");
          preview.style.backgroundImage = `url('${event.target.result}')`;
          preview.style.backgroundSize = "cover";
          preview.style.backgroundPosition = "center";
          preview.textContent = "";
        };
        reader.readAsDataURL(file);
      }
    });
  </script>

</body>
</html>
