<link rel='preconnect' href='https://fonts.googleapis.com' />
<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
<link
  href='https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap'
  rel='stylesheet'
/>

<style>
  body,
  .login-page {
    font-family: 'Inter', sans-serif;
  }
  .login-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: #f6f7fb;
  }

  .login-box {
    width: 90%;
    max-width: 600px;
    height: auto;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 6px 18px rgba(20, 20, 40, 0.08);
    padding: 1.5rem;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    position: relative;
  }

  .login-box h2 {
    margin: 8px 0 0 0;
    font-size: 1.25rem;
    color: #111827;
    text-align: center;
  }

  .form-group {
    margin-bottom: 14px;
  }

  .form-group label {
    display: block;
    font-size: 0.85rem;
    margin-bottom: 6px;
    color: #374151;
  }

  .form-group input[type='email'],
  .form-group input[type='password'] {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    box-sizing: border-box;
    outline: none;
  }

  form#loginForm {
    width: 100%;
    padding-bottom: 6rem;
  }

  .form-group input:focus {
    border-color: #c7d2fe;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.08);
  }

  .login-cta {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .login-btn {
    background: #e5e7eb;
    color: #374151;
    padding: 12px 28px;
    border-radius: 999px;
    border: none;
    width: 60%;
    max-width: 320px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(16, 24, 40, 0.06);
  }

  .login-btn:hover {
    opacity: 0.98;
  }

  /* small responsive tweak */
  @media (max-width: 480px) {
    .login-box {
      padding: 20px;
    }
    .login-btn {
      width: 90%;
      max-width: none;
    }
  }
</style>

<div class='login-page'>
  <div class='login-box' role='region' aria-label='Login form'>
    <div style='display:flex;flex-direction:column;align-items:center;'>
      <img
        src='/assets/SKK_Logo.png'
        alt='SKK logo'
        style='width:84px;height:auto;display:block;'
      />
      <h2 style='margin-top:4px;'>Log in</h2>
    </div>
    <form id='loginForm' action='/login' method='post'>
      <div class='form-group'>
        <label for='email'>Email</label>
        <input id='email' name='email' type='email' placeholder='you@example.com' required />
      </div>

      <div class='form-group'>
        <label for='password'>Password</label>
        <input
          id='password'
          name='password'
          type='password'
          placeholder='Enter your password'
          required
        />
      </div>

      <div class='login-cta' style='display:flex;justify-content:center;margin-top:18px;'>
        <button type='submit' form='loginForm' class='login-btn'>Log in</button>
      </div>
    </form>
  </div>
</div>