{{!-- ===========================
     SKK Event Calendar Admin View
     =========================== --}}

<div id="calendar-app" class="min-h-screen bg-white p-10 flex flex-col items-center">
  <!-- Title -->
  <h1 class="text-5xl mb-8 font-bold text-gray-900 text-center">SKK Event Calendar</h1>

  <!-- Navigation and View Toggle -->
  <div class="w-full max-w-4xl mb-6 flex justify-between items-center flex-wrap gap-3">
    <!-- Date Navigation -->
    <div class="flex items-center gap-3">
      <h2 id="display-text" class="text-3xl min-w-[250px] text-gray-800 font-semibold"></h2>
      <div class="flex items-center gap-2">
        <button id="prev-btn" class="p-2 bg-gray-100 hover:bg-gray-200 rounded-md transition border border-gray-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <button id="next-btn" class="p-2 bg-gray-100 hover:bg-gray-200 rounded-md transition border border-gray-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>
    </div>

    <!-- View Toggle -->
    <div class="flex rounded-lg overflow-hidden border border-gray-400">
      <button class="view-btn px-6 py-2 bg-gray-300 text-gray-800 hover:bg-gray-400 transition" data-view="day">
        Day
      </button>
      <button class="view-btn px-6 py-2 border-l border-r border-gray-400 bg-gray-300 text-gray-800 hover:bg-gray-400 transition" data-view="week">
        Week
      </button>
      <button class="view-btn px-6 py-2 bg-[#7CB342] text-white hover:bg-[#689F38] transition" data-view="month">
        Month
      </button>
    </div>
  </div>

  <!-- Calendar -->
  <div class="w-full max-w-4xl rounded-2xl overflow-hidden border border-gray-400 bg-white shadow-md">
    <div id="calendar-container"></div>
  </div>

  <!-- View Statistics Button -->
  <button class="mt-6 bg-[#7CB342] text-white px-10 py-3 rounded-lg hover:bg-[#689F38] transition">
    View Statistics
  </button>

  <!-- Event Details Modal -->
  <div id="event-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4 shadow-lg">
      <div class="flex justify-between items-start mb-4">
        <h3 id="event-title" class="text-xl font-semibold text-gray-900"></h3>
        <button id="close-event-modal" class="text-gray-500 hover:text-gray-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="space-y-3">
        <div>
          <p class="font-semibold text-gray-900">Date</p>
          <p id="event-date" class="text-gray-700"></p>
        </div>
        <div>
          <p class="font-semibold text-gray-900">Time</p>
          <p id="event-time" class="text-gray-700"></p>
        </div>
        <div>
          <p class="font-semibold text-gray-900">Description</p>
          <p id="event-description" class="text-gray-700"></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Create Event Modal -->
  <div id="create-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4 shadow-lg">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h3 class="text-xl font-semibold text-gray-900">Create New Event</h3>
          <p id="create-date" class="text-sm text-gray-600 mt-1"></p>
        </div>
        <button id="close-create-modal" class="text-gray-500 hover:text-gray-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="space-y-4">
        <div>
          <label for="new-event-title" class="block text-sm font-medium text-gray-700 mb-1">
            Event Title *
          </label>
          <input id="new-event-title" type="text" placeholder="Enter event title"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#7CB342]" />
        </div>
        <div>
          <label for="new-event-time" class="block text-sm font-medium text-gray-700 mb-1">
            Time
          </label>
          <input id="new-event-time" type="text" placeholder="e.g., 2:00 PM - 4:00 PM"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#7CB342]" />
        </div>
        <div>
          <label for="new-event-description" class="block text-sm font-medium text-gray-700 mb-1">
            Description
          </label>
          <textarea id="new-event-description" rows="4" placeholder="Enter event description"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#7CB342]"></textarea>
            <div>
              <label for="new-event-image" class="block text-sm font-medium text-gray-700 mb-1">
                Image (optional)
              </label>
              <input id="new-event-image" name="image" type="file" accept="image/*" class="w-full" />
              <img id="new-event-image-preview" class="mt-2 max-h-32 object-cover rounded hidden" alt="Image Preview" />
            </div>
        </div>
        <div class="flex gap-2 justify-end pt-2">
          <button id="cancel-create-btn" class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50">
            Cancel
          </button>
          <button id="create-event-btn" class="px-4 py-2 bg-[#7CB342] hover:bg-[#689F38] text-white rounded-md">
            Create Event
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.min.js" defer></script>
<script src="/js/calendarApp.js" defer></script>
